<div class="row">
  <div class="col-6 m-auto">
    <h1 class="text-center mt-4">請修改您的支出</h1>
    <div class="card card-body mt-5">
      <form action="/records/{{record.id}}/edit?_method=PUT" method="POST">
        {{!-- name --}}
        <div class="form-group row">
          <div class="col-sm-2" style="margin: auto 0;">
            <label for="name">名稱:</label>
          </div>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" value="{{record.name}}" placeholder="請輸入名稱"
              required>
          </div>
        </div>
        {{!-- date --}}
        <div class="form-group row">
          <div class="col-sm-2" style="margin: auto 0;">
            <label for="date">日期:</label>
          </div>
          <div class="col-sm-10">
            <input type="date" class="form-control" name="date" id="date" value="{{dateTime}}" placeholder="請輸入日期"
              required>
          </div>
        </div>
        {{!-- category --}}
        <div class="from-group row mb-3">
          <div class="col-sm-2">
            <label for="category" style="margin-top: 5px;">類別:</label>
          </div>
          <div class="col-sm-10">
            <select class="custom-select" id="category" name="category" required>
              <option value="{{record.category}}">{{record.category}}</option>
              <option value="家居物業">家居物業</option>
              <option value="交通出行">交通出行</option>
              <option value="休閒娛樂">休閒娛樂</option>
              <option value="餐飲食品">餐飲食品</option>
              <option value="其它">其它</option>
            </select>
          </div>
        </div>
        {{!-- amount --}}
        <div class="form-group row">
          <div class="col-sm-2" style="margin: auto 0;">
            <label for="amount">金額:</label>
          </div>
          <div class="col-sm-10">
            <input type="number" class="form-control" id="amount" name="amount" value="{{record.amount}}"
              placeholder="請輸入金額" required>
          </div>
        </div>
        <button type="submit" class="btn btn-outline-info btn-block mt-5">修改</button>
      </form>
    </div>
  </div>
</div>