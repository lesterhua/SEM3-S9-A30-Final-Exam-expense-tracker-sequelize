<div class="row mt-5 justify-content-center">
  <h1>請輸入您的支出</h1>
</div>
<div class="row mt-4">
  <div class="col-6 m-auto">
    <div class=" card card-body">
      <form action="/records/new" method="POST">
        {{!-- name --}}
        <div class="form-group row">
          <div class="col-sm-2" style="margin: auto 0;">
            <label for="name">名稱:</label>
          </div>
          <div class="col-sm-9">
            <input type="text" class="form-control" id="name" name="name" placeholder="請輸入名稱" required>
          </div>
        </div>
        {{!-- date --}}
        <div class="form-group row">
          <div class="col-sm-2" style="margin: auto 0;">
            <label for="date">日期:</label>
          </div>
          <div class="col-sm-9">
            <input type="date" class="form-control" id="date" name="date" required>
          </div>
        </div>
        {{!-- category --}}
        <div class="form-group row">
          <div class="col-sm-2" style="margin: auto 0;">
            <label for="category">類別:</label>
          </div>
          <div class="col-sm-9">
            <select class="custom-select mr-sm-2" id="category" name="category" required>
              <option value="家居物業">家居物業</option>
              <option value="交通出行">交通出行</option>
              <option value="休閒娛樂">休閒娛樂</option>
              <option value="餐飲食品">餐飲食品</option>
              <option value="其它">其它</option>
            </select>
          </div>
        </div>
        {{!-- amount --}}
        <div class="form-group row">
          <div class="col-sm-2" style="margin: auto 0;">
            <label for="amount">金額:</label>
          </div>
          <div class="col-sm-9">
            <input type="number" class="form-control" id="amount" name="amount" required>
          </div>
        </div>
        {{!-- submit --}}
        <button type="submit" class="btn btn-outline-primary btn-block">新增</button>
      </form>
    </div>
  </div>
</div>